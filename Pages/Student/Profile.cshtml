@page
@model FYP1System.Pages.Student.ProfileModel
@{
    ViewData["Title"] = "Personal Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>Personal Details Registration
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.StudentId" class="form-label">Student ID</label>
                                    <input asp-for="Input.StudentId" class="form-control" />
                                    <span asp-validation-for="Input.StudentId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.ProgramId" class="form-label">Program</label>
                                    <select asp-for="Input.ProgramId" class="form-select" asp-items="Model.Programs">
                                        <option value="">Select Program</option>
                                    </select>
                                    <span asp-validation-for="Input.ProgramId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.Session" class="form-label">Session</label>
                                    <input asp-for="Input.Session" class="form-control" placeholder="e.g., 2024/2025" />
                                    <span asp-validation-for="Input.Session" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.Semester" class="form-label">Semester</label>
                                    <select asp-for="Input.Semester" class="form-select">
                                        <option value="">Select Semester</option>
                                        <option value="1">Semester 1</option>
                                        <option value="2">Semester 2</option>
                                        <option value="3">Semester 3</option>
                                    </select>
                                    <span asp-validation-for="Input.Semester" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.GPA" class="form-label">Current GPA (Optional)</label>
                            <input asp-for="Input.GPA" class="form-control" type="number" step="0.01" min="0" max="4.0" />
                            <span asp-validation-for="Input.GPA" class="text-danger"></span>
                            <div class="form-text">Enter your current GPA (0.00 - 4.00)</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./Index" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Details
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
