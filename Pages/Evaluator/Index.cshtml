@page
@model FYP1System.Pages.Evaluator.IndexModel
@{
    ViewData["Title"] = "Evaluator Dashboard";
}

<style>
/* Evaluator Dashboard Styling - Consistent with Admin */
.evaluator-dashboard {
    padding: 2rem 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    min-height: calc(100vh - 200px);
}

/* Dashboard Header */
.dashboard-header {
    background: linear-gradient(135deg, #fd7e14 0%, #e8590c 100%);
    color: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(253, 126, 20, 0.3);
    position: relative;
    overflow: hidden;
}

.dashboard-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 100%;
    height: 200%;
    background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 100%);
    transform: rotate(45deg);
}

.dashboard-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    position: relative;
    z-index: 2;
}

.dashboard-subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    margin: 0;
    position: relative;
    z-index: 2;
}

.dashboard-meta {
    position: relative;
    z-index: 2;
}

.dashboard-meta .badge {
    font-size: 0.9rem;
    border-radius: 20px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
}

/* Statistics Cards */
.stats-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    border: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.stats-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
}

.stats-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.15);
}

.stats-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.stats-icon {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    color: white;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
}

.stats-info h3 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    color: #2c3e50;
}

.stats-label {
    color: #6c757d;
    font-size: 1rem;
    margin: 0;
}

.stats-trend {
    background: rgba(40, 167, 69, 0.1);
    color: #28a745;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-top: 1rem;
    display: inline-block;
}

/* Color variants for stats cards */
.stats-primary {
    --primary-color: #fd7e14;
    --secondary-color: #e8590c;
}

.stats-success {
    --primary-color: #28a745;
    --secondary-color: #1e7e34;
}

.stats-info {
    --primary-color: #17a2b8;
    --secondary-color: #117a8b;
}

.stats-warning {
    --primary-color: #ffc107;
    --secondary-color: #e0a800;
}

/* Management Cards */
.management-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.management-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.card-header-custom {
    padding: 1.5rem;
    color: white;
    border: none;
}

.header-content {
    display: flex;
    align-items: center;
}

.header-icon {
    width: 50px;
    height: 50px;
    border-radius: 10px;
    background: rgba(255,255,255,0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin-right: 1rem;
}

.header-text h5 {
    margin: 0;
    font-weight: 600;
    font-size: 1.2rem;
}

.header-text span {
    font-size: 0.9rem;
    opacity: 0.9;
}

.card-body-custom {
    padding: 1.5rem;
    flex-grow: 1;
}

.btn-action {
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
}

.btn-action:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

/* Animation */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-in-up {
    animation: fadeInUp 0.6s ease-out;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .dashboard-title {
        font-size: 2rem;
    }
    
    .stats-info h3 {
        font-size: 2rem;
    }
    
    .stats-icon {
        width: 60px;
        height: 60px;
        font-size: 1.5rem;
    }
}
</style>

<div class="evaluator-dashboard">
    <div class="container">
        <!-- Dashboard Header -->
        <div class="dashboard-header mb-4 fade-in-up">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="dashboard-title">
                        <i class="fas fa-clipboard-check me-3"></i>Evaluator Dashboard
                    </h1>
                    <p class="dashboard-subtitle">Comprehensive evaluation management center</p>
                </div>
                <div class="col-md-4 text-md-end dashboard-meta">
                    <span class="badge bg-light text-dark">
                        <i class="fas fa-user-circle me-2"></i>@User.Identity?.Name
                    </span>
                    <br>
                    <small class="text-light opacity-75">
                        <i class="fas fa-calendar me-1"></i>@DateTime.Now.ToString("MMMM dd, yyyy")
                    </small>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="stats-card stats-primary fade-in-up">
                    <div class="stats-content">
                        <div class="stats-details">
                            <h3>@Model.AssignedProposals</h3>
                            <p class="stats-label">Assigned Proposals</p>
                            <div class="stats-trend">
                                <i class="fas fa-tasks me-1"></i>Total
                            </div>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="stats-card stats-warning fade-in-up">
                    <div class="stats-content">
                        <div class="stats-details">
                            <h3>@Model.PendingEvaluations</h3>
                            <p class="stats-label">Pending Reviews</p>
                            <div class="stats-trend">
                                <i class="fas fa-clock me-1"></i>Awaiting
                            </div>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-hourglass-half"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="stats-card stats-success fade-in-up">
                    <div class="stats-content">
                        <div class="stats-details">
                            <h3>@Model.CompletedEvaluations</h3>
                            <p class="stats-label">Completed</p>
                            <div class="stats-trend">
                                <i class="fas fa-check me-1"></i>Finished
                            </div>
                        </div>
                        <div class="stats-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Management Actions -->
        <div class="row mb-4">
            <!-- Assigned Proposals Section -->
            <div class="col-lg-8 mb-4">
                <div class="management-card fade-in-up">
                    <div class="card-header-custom" style="background: linear-gradient(135deg, #fd7e14 0%, #e8590c 100%);">
                        <div class="header-content">
                            <div class="header-icon">
                                <i class="fas fa-clipboard-list"></i>
                            </div>
                            <div class="header-text">
                                <h5>Recent Assignments</h5>
                                <span>Latest proposals to evaluate</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body-custom">
                        @if (Model.RecentAssignments.Any())
                        {
                            @foreach (var proposal in Model.RecentAssignments)
                            {
                                var assignment = Model.MyAssignments.FirstOrDefault(a => a.ProposalId == proposal.Id);
                                <div class="card border-0 shadow-sm mb-3">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-8">
                                                <h6 class="fw-bold mb-2">@proposal.Title</h6>
                                                <p class="text-muted mb-1">
                                                    <i class="fas fa-user me-2"></i>@proposal.Student.User.FullName
                                                    <span class="mx-2">â€¢</span>
                                                    <i class="fas fa-graduation-cap me-2"></i>@proposal.Student.Program?.Name
                                                </p>
                                                <small class="text-info">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    Assigned: @assignment?.AssignedDate.ToString("MMM dd, yyyy")
                                                </small>
                                            </div>
                                            <div class="col-md-4 text-end">
                                                <span class="badge rounded-pill 
                                                    @(proposal.Status == FYP1System.Models.ProposalStatus.Approved ? "bg-success" :
                                                      proposal.Status == FYP1System.Models.ProposalStatus.Rejected ? "bg-danger" :
                                                      proposal.Status == FYP1System.Models.ProposalStatus.UnderReview ? "bg-warning" :
                                                      "bg-secondary") mb-2">
                                                    @proposal.Status
                                                </span>
                                                <br>
                                                <a href="/Evaluator/Proposals/Evaluate/@proposal.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-clipboard-check me-1"></i>Evaluate
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="text-center">
                                <a href="/Evaluator/Proposals" class="btn btn-outline-primary">
                                    View All Assignments <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-clipboard fa-3x text-muted mb-3"></i>
                                <p class="text-muted">No proposals assigned yet.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions & Evaluation Guide -->
            <div class="col-lg-4">
                <!-- Quick Actions Card -->
                <div class="management-card fade-in-up mb-4">
                    <div class="card-header-custom" style="background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);">
                        <div class="header-content">
                            <div class="header-icon">
                                <i class="fas fa-bolt"></i>
                            </div>
                            <div class="header-text">
                                <h5>Quick Actions</h5>
                                <span>Evaluator tools</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body-custom">
                        <div class="d-grid gap-3">
                            <a href="/Evaluator/Proposals" class="btn btn-outline-primary btn-action">
                                <i class="fas fa-clipboard-list me-2"></i>All Assignments
                            </a>
                            
                            <a href="/Evaluator/Evaluations" class="btn btn-outline-info btn-action">
                                <i class="fas fa-star me-2"></i>My Evaluations
                            </a>
                            
                            <a href="/Evaluator/Downloads" class="btn btn-outline-success btn-action">
                                <i class="fas fa-download me-2"></i>Download Files
                            </a>
                            
                            <a href="/Evaluator/Guidelines" class="btn btn-outline-warning btn-action">
                                <i class="fas fa-book me-2"></i>Guidelines
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Evaluation Guide Card -->
                <div class="management-card fade-in-up">
                    <div class="card-header-custom" style="background: linear-gradient(135deg, #6f42c1 0%, #5a36a1 100%);">
                        <div class="header-content">
                            <div class="header-icon">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div class="header-text">
                                <h5>Evaluation Guide</h5>
                                <span>Assessment criteria</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body-custom">
                        <div class="evaluation-criteria">
                            <div class="criteria-item mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-cogs text-primary me-2"></i>Technical Merit</span>
                                    <span class="badge bg-light text-dark">25%</span>
                                </div>
                            </div>
                            <div class="criteria-item mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-lightbulb text-warning me-2"></i>Innovation</span>
                                    <span class="badge bg-light text-dark">25%</span>
                                </div>
                            </div>
                            <div class="criteria-item mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-check-double text-success me-2"></i>Feasibility</span>
                                    <span class="badge bg-light text-dark">25%</span>
                                </div>
                            </div>
                            <div class="criteria-item mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-book-open text-info me-2"></i>Literature Review</span>
                                    <span class="badge bg-light text-dark">25%</span>
                                </div>
                            </div>
                        </div>
                        <hr class="my-3">
                        <div class="text-center">
                            <small class="text-muted">
                                <i class="fas fa-star me-1"></i>
                                Score range: 0-100 for each criteria
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.criteria-item {
    font-size: 0.9rem;
}

.btn-action {
    border-radius: 10px !important;
}

.evaluation-criteria {
    background: rgba(0,0,0,0.02);
    padding: 1rem;
    border-radius: 10px;
}
</style>
