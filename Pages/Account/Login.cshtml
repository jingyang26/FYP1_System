@page
@model FYP1System.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-container">
    <div class="auth-card floating-animation">
        <div class="auth-header login-header">
            <div class="icon">
                <i class="fas fa-sign-in-alt"></i>
            </div>
            <h2>Welcome Back</h2>
        </div>
        
        <div class="auth-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <form id="account" method="post">
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control login-focus" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">
                        <i class="fas fa-envelope me-2"></i>Email Address
                    </label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control login-focus" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">
                        <i class="fas fa-lock me-2"></i>Password
                    </label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        <i class="fas fa-remember me-2"></i>Remember me
                    </label>
                </div>
                
                <button id="login-submit" type="submit" class="btn btn-auth login-btn">
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </button>
            </form>
            
            <div class="auth-footer">
                <p class="mb-0">
                    <i class="fas fa-user-plus me-2"></i>
                    <a asp-page="./Register">Don't have an account? Register here</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
