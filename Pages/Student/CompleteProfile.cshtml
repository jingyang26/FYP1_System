@page
@model FYP1System.Pages.Student.CompleteProfileModel
@{
    ViewData["Title"] = "Complete Student Profile";
}

<div class="role-dashboard student-dashboard">
    <!-- Header Section -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="dashboard-title">
                    <i class="bi bi-person-plus me-3"></i>
                    Complete Your Profile
                </h1>
                <p class="dashboard-subtitle">Please provide your student information to access the FYP1 system</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="dashboard-meta">
                    <span class="badge badge-light-blue px-3 py-2">
                        <i class="bi bi-calendar me-2"></i>
                        <span id="current-datetime"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Profile Completion Form -->
                <div class="content-card">
                    <div class="card-header bg-transparent border-0 pt-3">
                        <h5 class="mb-0">
                            <i class="bi bi-person-vcard me-2"></i>Student Information
                        </h5>
                        <p class="text-muted small mb-0">All fields marked with * are required</p>
                    </div>
                    <div class="card-body">
                        <form method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Input.StudentId" class="form-label required">Student ID</label>
                                    <input asp-for="Input.StudentId" class="form-control" placeholder="e.g., SE123456" maxlength="20" />
                                    <span asp-validation-for="Input.StudentId" class="text-danger small"></span>
                                    <div class="form-text">Enter your university student ID</div>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Input.ProgramId" class="form-label required">Program</label>
                                    <select asp-for="Input.ProgramId" asp-items="Model.ProgramList" class="form-select">
                                        <option value="">-- Select Program --</option>
                                    </select>
                                    <span asp-validation-for="Input.ProgramId" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Input.Session" class="form-label required">Academic Session</label>
                                    <input asp-for="Input.Session" class="form-control" placeholder="e.g., 2024/2025" maxlength="20" />
                                    <span asp-validation-for="Input.Session" class="text-danger small"></span>
                                    <div class="form-text">Format: YYYY/YYYY</div>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Input.Semester" class="form-label required">Current Semester</label>
                                    <select asp-for="Input.Semester" class="form-select">
                                        <option value="">-- Select Semester --</option>
                                        <option value="1">Semester 1</option>
                                        <option value="2">Semester 2</option>
                                        <option value="3">Semester 3</option>
                                    </select>
                                    <span asp-validation-for="Input.Semester" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Input.GPA" class="form-label">Current GPA (Optional)</label>
                                    <input asp-for="Input.GPA" type="number" step="0.01" min="0" max="4" class="form-control" placeholder="e.g., 3.50" />
                                    <span asp-validation-for="Input.GPA" class="text-danger small"></span>
                                    <div class="form-text">Scale: 0.00 - 4.00</div>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="text-muted">
                                            <i class="bi bi-info-circle me-1"></i>
                                            <small>Once submitted, some information may require administrator approval to change.</small>
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-light-blue btn-lg">
                                                <i class="bi bi-check-circle me-2"></i>Complete Profile
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Help Information -->
                <div class="content-card mt-4">
                    <div class="card-header bg-transparent border-0 pt-3">
                        <h6 class="mb-0">
                            <i class="bi bi-question-circle me-2"></i>Need Help?
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="help-item">
                                    <h6><i class="bi bi-card-text me-2"></i>Student ID</h6>
                                    <p class="small text-muted mb-0">Your official university student identification number. Usually starts with your program code (e.g., SE, DE, CS, CN).</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="help-item">
                                    <h6><i class="bi bi-calendar-event me-2"></i>Academic Session</h6>
                                    <p class="small text-muted mb-0">The academic year you are currently enrolled in. Format should be YYYY/YYYY (e.g., 2024/2025).</p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 p-3 bg-light rounded">
                            <strong>Contact Information:</strong><br>
                            <small class="text-muted">
                                If you need assistance completing your profile, please contact the administrator at 
                                <a href="mailto:admin@fyp1.edu.my">admin@fyp1.edu.my</a> or visit the academic office.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Student Dashboard Styling */
.student-dashboard {
    background: linear-gradient(135deg, #f8f9fa 0%, #e8f5e8 100%);
    min-height: 100vh;
}

.dashboard-header {
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    color: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
    margin-bottom: 1.5rem;
}

.dashboard-title {
    font-size: 2.2rem;
    font-weight: 700;
    margin: 0;
}

.dashboard-subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    margin: 0;
}

.badge-light-blue {
    background-color: rgba(255,255,255,0.2);
    color: white;
    border: 1px solid rgba(255,255,255,0.3);
}

/* Content Cards */
.content-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    border: none;
    transition: all 0.3s ease;
    overflow: hidden;
}

.content-card:hover {
    box-shadow: 0 8px 25px rgba(0,0,0,0.12);
    transform: translateY(-2px);
}

/* Button Styling */
.btn-light-blue {
    background-color: #28a745;
    border-color: #28a745;
    color: white;
    font-weight: 600;
}

.btn-light-blue:hover {
    background-color: #20c997;
    border-color: #20c997;
    color: white;
}

/* Form Styling */
.form-label.required::after {
    content: " *";
    color: #dc3545;
}

.form-control:focus,
.form-select:focus {
    border-color: #28a745;
    box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
}

.help-item h6 {
    color: #28a745;
    font-weight: 600;
}

/* Animation */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.content-card {
    animation: fadeInUp 0.6s ease-out;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .dashboard-title {
        font-size: 1.8rem;
    }
    
    .dashboard-header {
        padding: 1.5rem;
    }
}
</style>

<script>
// Update current date and time
function updateDateTime() {
    const now = new Date();
    const options = { 
        year: 'numeric', 
        month: 'short', 
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
    };
    const element = document.getElementById('current-datetime');
    if (element) {
        element.textContent = now.toLocaleDateString('en-US', options);
    }
}

document.addEventListener('DOMContentLoaded', function() {
    updateDateTime();
    setInterval(updateDateTime, 60000); // Update every minute
    
    // Auto-format session field
    const sessionInput = document.querySelector('input[name="Input.Session"]');
    if (sessionInput) {
        sessionInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^0-9]/g, '');
            if (value.length >= 4) {
                value = value.substring(0, 4) + '/' + value.substring(4, 8);
            }
            e.target.value = value;
        });
    }
});
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
