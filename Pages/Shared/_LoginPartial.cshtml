@using Microsoft.AspNetCore.Identity
@using FYP1System.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav user-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown user-dropdown">
        <a class="nav-link dropdown-toggle user-menu" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="user-avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            <span class="user-greeting">
                <span class="greeting-text">Hello,</span>
                <span class="user-name">@User.Identity?.Name</span>
            </span>
            <i class="fas fa-chevron-down dropdown-icon"></i>
        </a>
        <ul class="dropdown-menu user-dropdown-menu" aria-labelledby="navbarDropdown">
            <li>
                <a class="dropdown-item" asp-page="/Account/Profile">
                    <i class="fas fa-user-cog me-2"></i>
                    View Profile
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
                    <button type="submit" class="dropdown-item logout-btn">
                        <i class="fas fa-sign-out-alt me-2"></i>
                        Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link auth-link login-link" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt nav-icon"></i>
            <span>Login</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link auth-link register-link" asp-page="/Account/Register">
            <i class="fas fa-user-plus nav-icon"></i>
            <span>Register</span>
        </a>
    </li>
}
</ul>
