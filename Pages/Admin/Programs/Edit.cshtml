@page
@model FYP1System.Pages.Admin.Programs.EditModel
@{
    ViewData["Title"] = "Edit Program";
}

<div class="fade-in-up">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-1">
                <i class="fas fa-edit me-2 text-primary"></i>
                Edit Academic Program
            </h2>
            <p class="text-muted">Modify program information and settings</p>
        </div>
        <a asp-page="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Back to Programs
        </a>
    </div>

    <!-- Edit Form -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-form me-2"></i>
                Program Information
            </h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Program.Id" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Program.Name" class="form-label">
                                <i class="fas fa-graduation-cap me-1"></i>
                                Program Name *
                            </label>
                            <input asp-for="Program.Name" class="form-control" />
                            <span asp-validation-for="Program.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Program.Description" class="form-label">
                                <i class="fas fa-align-left me-1"></i>
                                Description *
                            </label>
                            <textarea asp-for="Program.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Program.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Program.IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="Program.IsActive" class="form-check-label">
                                    <i class="fas fa-toggle-on me-1 text-success"></i>
                                    Active Program
                                </label>
                            </div>
                            <small class="form-text text-muted">
                                Inactive programs will not be available for new registrations.
                            </small>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    Program Statistics
                                </h6>
                                <div class="row text-center">
                                    <div class="col-6">
                                        <div class="stat-item">
                                            <i class="fas fa-users fa-2x text-info mb-2"></i>
                                            <h4 class="mb-0">@(Model.Program?.Students?.Count ?? 0)</h4>
                                            <small class="text-muted">Students</small>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="stat-item">
                                            <i class="fas fa-chalkboard-teacher fa-2x text-success mb-2"></i>
                                            <h4 class="mb-0">@(Model.Program?.Lecturers?.Count ?? 0)</h4>
                                            <small class="text-muted">Lecturers</small>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <div class="text-center">
                                    <div class="stat-item">
                                        <i class="fas fa-user-tie fa-2x text-warning mb-2"></i>
                                        <h4 class="mb-0">@(Model.Program?.CommitteeMembers?.Count ?? 0)</h4>
                                        <small class="text-muted">Committee Members</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>
                        Update Program
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .stat-item {
        padding: 1rem 0;
    }
</style>
