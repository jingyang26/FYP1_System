        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card stats-warning">
                <div class="stats-content">
                    <div class="stats-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <div class="stats-info">
                        <h3 class="stats-number">@Model.TotalProposals</h3>
                        <p class="stats-label">Proposals</p>
                    </div>
                </div>
                <div class="stats-trend">
                    <i class="fas fa-arrow-up"></i> Submitted
                </div>
            </div>
        </div>
    </div>

    <!-- Management Actions -->
    <div class="row justify-content-center">
        <!-- Programs Management -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="management-card">
                <div class="card-header-custom bg-primary">
                    <div class="header-content">
                        <div class="header-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="header-text">
                            <h5>Programs</h5>
                            <span>Management</span>
                        </div>
                    </div>
                </div>
                <div class="card-body-custom">
                    <p class="card-description">Manage academic programs, their status, and configurations.</p>
                    <ul class="feature-list">
                        <li><i class="fas fa-check text-success me-2"></i>Add/Edit Programs</li>
                        <li><i class="fas fa-check text-success me-2"></i>Status Control</li>
                        <li><i class="fas fa-check text-success me-2"></i>View Analytics</li>
                    </ul>
                </div>
                <div class="card-footer-custom">
                    <a href="/Admin/Programs" class="btn btn-primary btn-action">
                        <i class="fas fa-cog me-2"></i>
                        Manage Programs
                    </a>
                </div>
            </div>
        </div>

        <!-- Lecturers Management -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="management-card">
                <div class="card-header-custom bg-success">
                    <div class="header-content">
                        <div class="header-icon">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <div class="header-text">
                            <h5>Lecturers</h5>
                            <span>Management</span>
                        </div>
                    </div>
                </div>
                <div class="card-body-custom">
                    <p class="card-description">Add and manage lecturer accounts, domains, and assignments.</p>
                    <ul class="feature-list">
                        <li><i class="fas fa-check text-success me-2"></i>Add New Lecturers</li>
                        <li><i class="fas fa-check text-success me-2"></i>Program Assignment</li>
                        <li><i class="fas fa-check text-success me-2"></i>Domain Setting</li>
                    </ul>
                </div>
                <div class="card-footer-custom">
                    <a href="/Admin/Lecturers" class="btn btn-success btn-action">
                        <i class="fas fa-users-cog me-2"></i>
                        Manage Lecturers
                    </a>
                </div>
            </div>
        </div>

        <!-- Committee Management -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="management-card">
                <div class="card-header-custom bg-warning">
                    <div class="header-content">
                        <div class="header-icon">
                            <i class="fas fa-user-tie"></i>
                        </div>
                        <div class="header-text">
                            <h5>Committee</h5>
                            <span>Management</span>
                        </div>
                    </div>
                </div>
                <div class="card-body-custom">
                    <p class="card-description">Manage committee members and their roles in the system.</p>
                    <ul class="feature-list">
                        <li><i class="fas fa-check text-success me-2"></i>Assign Roles</li>
                        <li><i class="fas fa-check text-success me-2"></i>Program-based</li>
                        <li><i class="fas fa-check text-success me-2"></i>Role Management</li>
                    </ul>
                </div>
                <div class="card-footer-custom">
                    <a href="/Admin/Committee" class="btn btn-warning btn-action">
                        <i class="fas fa-star me-2"></i>
