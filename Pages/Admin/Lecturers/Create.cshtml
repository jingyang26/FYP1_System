@page
@model FYP1System.Pages.Admin.Lecturers.CreateModel
@{
    ViewData["Title"] = "Add New Lecturer";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Add New Lecturer
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.FullName" class="form-label"></label>
                                    <input asp-for="Input.FullName" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label"></label>
                                    <input asp-for="Input.Email" class="form-control" placeholder="Enter email address" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.ProgramId" class="form-label"></label>
                                    <select asp-for="Input.ProgramId" class="form-select" asp-items="Model.ProgramSelectList">
                                        <option value="">Select a program</option>
                                    </select>
                                    <span asp-validation-for="Input.ProgramId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.Domain" class="form-label"></label>
                                    <input asp-for="Input.Domain" class="form-control" placeholder="Enter domain/specialization" />
                                    <span asp-validation-for="Input.Domain" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Input.OfficeLocation" class="form-label"></label>
                                    <input asp-for="Input.OfficeLocation" class="form-control" placeholder="Enter office location" />
                                    <span asp-validation-for="Input.OfficeLocation" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="Input.IsCommittee" class="form-check-input" />
                                    <label asp-for="Input.IsCommittee" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="Input.IsActive" class="form-check-input" />
                                    <label asp-for="Input.IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Create Lecturer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
