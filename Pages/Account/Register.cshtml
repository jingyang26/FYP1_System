@page
@model FYP1System.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-container">
    <div class="auth-card floating-animation">
        <div class="auth-header register-header">
            <div class="icon">
                <i class="fas fa-user-plus"></i>
            </div>
            <h2>Create Account</h2>
        </div>
        
        <div class="auth-body">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="form-group-with-icon">
                    <div class="input-icon-wrapper">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Input.Email" class="form-control form-control-with-icon" autocomplete="username" aria-required="true" placeholder="Email Address" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-group-with-icon">
                    <div class="input-icon-wrapper">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="Input.FullName" class="form-control form-control-with-icon" placeholder="Full Name" />
                    </div>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                
                <!-- Hidden field for role since only Student registration is allowed -->
                <input asp-for="Input.Role" type="hidden" value="Student" />
                
                <div class="form-group-with-icon">
                    <div class="input-icon-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Input.Password" class="form-control form-control-with-icon" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="form-group-with-icon">
                    <div class="input-icon-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-with-icon" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                
                <button id="registerSubmit" type="submit" class="btn btn-auth register-btn">
                    <i class="fas fa-user-plus me-2"></i>Create Account
                </button>
            </form>
            
            <div class="auth-footer">
                <p class="mb-0">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    <a asp-page="./Login">Already have an account? Sign in</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
