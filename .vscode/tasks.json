{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"build",
				"FYP1System.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "run",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"run",
				"--project",
				"FYP1System.csproj"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"watch",
				"run",
				"--project",
				"FYP1System.csproj"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$msCompile"
			]
		}
	]
}