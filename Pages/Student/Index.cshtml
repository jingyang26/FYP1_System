@page
@model FYP1System.Pages.Student.IndexModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="role-dashboard student-dashboard">
    <!-- Professional Header Section -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="dashboard-title">
                    <i class="bi bi-mortarboard me-3"></i>Student Portal
                </h1>
                <p class="dashboard-subtitle">Your comprehensive FYP1 management hub</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="dashboard-meta">
                    <div class="user-badge mb-2">
                        <i class="bi bi-person-circle me-2"></i>@User.Identity?.Name
                    </div>
                    <span class="badge badge-light-blue px-3 py-2">
                        <i class="bi bi-calendar-event me-2"></i>
                        <span id="current-datetime"></span>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @if (Model.StudentInfo != null)
        {
            <!-- Enhanced Quick Stats Row -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="stats-card stats-primary">
                        <div class="stats-content">
                            <div class="stats-icon">
                                <i class="bi bi-file-earmark-text"></i>
                            </div>
                            <div class="stats-info">
                                <h3>@Model.Proposals.Count</h3>
                                <p class="stats-label">Total Proposals</p>
                            </div>
                        </div>
                        <div class="stats-trend">
                            <i class="bi bi-graph-up me-1"></i>
                            Active submissions
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="stats-card stats-success">
                        <div class="stats-content">
                            <div class="stats-icon">
                                <i class="bi bi-check-circle"></i>
                            </div>
                            <div class="stats-info">
                                <h3>@Model.Proposals.Count(p => p.Status == FYP1System.Models.ProposalStatus.Approved)</h3>
                                <p class="stats-label">Approved</p>
                            </div>
                        </div>
                        <div class="stats-trend">
                            <i class="bi bi-trophy me-1"></i>
                            Success rate
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="stats-card stats-info">
                        <div class="stats-content">
                            <div class="stats-icon">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <div class="stats-info">
                                <h3>@Model.Proposals.Count(p => p.Status == FYP1System.Models.ProposalStatus.UnderReview || p.Status == FYP1System.Models.ProposalStatus.Submitted)</h3>
                                <p class="stats-label">Under Review</p>
                            </div>
                        </div>
                        <div class="stats-trend">
                            <i class="bi bi-hourglass-split me-1"></i>
                            Pending evaluation
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="stats-card stats-warning">
                        <div class="stats-content">
                            <div class="stats-icon">
                                <i class="bi bi-star"></i>
                            </div>
                            <div class="stats-info">
                                <h3>@(Model.StudentInfo.GPA?.ToString("F2") ?? "N/A")</h3>
                                <p class="stats-label">Current GPA</p>
                            </div>
                        </div>
                        <div class="stats-trend">
                            <i class="bi bi-graph-up me-1"></i>
                            Academic standing
                        </div>
                    </div>
                </div>
            </div>

            <!-- Enhanced Student Information Card -->
            <div class="row mb-4">
                <div class="col-12 mb-4">
                    <div class="student-profile-card">
                        <!-- Card Header with Gradient -->
                        <div class="profile-card-header">
                            <div class="profile-header-content">
                                <div class="profile-header-icon">
                                    <i class="bi bi-person-badge"></i>
                                </div>
                                <div class="profile-header-text">
                                    <h4 class="profile-card-title">Student Profile</h4>
                                    <p class="profile-card-subtitle">Your academic information and details</p>
                                </div>
                            </div>
                            <div class="profile-header-decoration">
                                <div class="decoration-circle circle-1"></div>
                                <div class="decoration-circle circle-2"></div>
                                <div class="decoration-circle circle-3"></div>
                            </div>
                        </div>

                        <!-- Card Body with Enhanced Layout -->
                        <div class="profile-card-body">
                            <div class="row g-4">
                                <!-- Left Column - Basic Information -->
                                <div class="col-md-6">
                                    <div class="profile-section">
                                        <div class="section-header">
                                            <h6 class="section-title">
                                                <i class="bi bi-info-circle me-2"></i>Basic Information
                                            </h6>
                                        </div>
                                        
                                        <div class="profile-info-grid">
                                            <div class="info-item">
                                                <div class="info-icon">
                                                    <i class="bi bi-credit-card"></i>
                                                </div>
                                                <div class="info-content">
                                                    <label class="info-label">Student ID</label>
                                                    <div class="info-value fw-bold text-primary">@Model.StudentInfo.StudentId</div>
                                                </div>
                                            </div>

                                            <div class="info-item">
                                                <div class="info-icon">
                                                    <i class="bi bi-mortarboard"></i>
                                                </div>
                                                <div class="info-content">
                                                    <label class="info-label">Program</label>
                                                    <div class="info-value">@Model.StudentInfo.Program?.Name</div>
                                                </div>
                                            </div>

                                            <div class="info-item">
                                                <div class="info-icon">
                                                    <i class="bi bi-calendar-range"></i>
                                                </div>
                                                <div class="info-content">
                                                    <label class="info-label">Academic Session</label>
                                                    <div class="info-value">@Model.StudentInfo.Session</div>
                                                </div>
                                            </div>

                                            <div class="info-item">
                                                <div class="info-icon">
                                                    <i class="bi bi-calendar3"></i>
                                                </div>
                                                <div class="info-content">
                                                    <label class="info-label">Current Semester</label>
                                                    <div class="info-value">
                                                        <span class="badge bg-light-blue text-white px-3 py-2">
                                                            Semester @Model.StudentInfo.Semester
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Right Column - Supervisor & GPA -->
                                <div class="col-md-6">
                                    @if (Model.StudentInfo.Supervisor != null)
                                    {
                                        <div class="profile-section">
                                            <div class="section-header">
                                                <h6 class="section-title">
                                                    <i class="bi bi-person-check me-2"></i>Assigned Supervisor
                                                </h6>
                                            </div>
                                            
                                            <div class="supervisor-profile-card">
                                                <div class="supervisor-avatar">
                                                    <div class="avatar-circle">
                                                        <i class="bi bi-person-circle"></i>
                                                    </div>
                                                </div>
                                                
                                                <div class="supervisor-details">
                                                    <h6 class="supervisor-name">@Model.StudentInfo.Supervisor.User.FullName</h6>
                                                    
                                                    <div class="supervisor-info-grid">
                                                        <div class="supervisor-info-item">
                                                            <i class="bi bi-lightbulb text-warning"></i>
                                                            <span class="info-label">Domain:</span>
                                                            <span class="info-value">@Model.StudentInfo.Supervisor.Domain</span>
                                                        </div>
                                                        
                                                        <div class="supervisor-info-item">
                                                            <i class="bi bi-geo-alt text-danger"></i>
                                                            <span class="info-label">Office:</span>
                                                            <span class="info-value">@Model.StudentInfo.Supervisor.OfficeLocation</span>
                                                        </div>
                                                        
                                                        <div class="supervisor-info-item">
                                                            <i class="bi bi-star text-warning"></i>
                                                            <span class="info-label">Specialization:</span>
                                                            <span class="info-value">@Model.StudentInfo.Supervisor.Specialization</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="profile-section">
                                            <div class="no-supervisor-card">
                                                <div class="no-supervisor-icon">
                                                    <i class="bi bi-person-x"></i>
                                                </div>
                                                <h6 class="no-supervisor-title">Supervisor Assignment Pending</h6>
                                                <p class="no-supervisor-text">Please select your preferred supervisor to continue with your FYP1 journey.</p>
                                                <a asp-page="./SelectSupervisor" class="btn btn-light-blue btn-sm">
                                                    <i class="bi bi-person-plus me-2"></i>Select Supervisor
                                                </a>
                                            </div>
                                        </div>
                                    }
                                    
                                    @if (Model.StudentInfo.GPA.HasValue)
                                    {
                                        <div class="gpa-section mt-4">
                                            <div class="gpa-card">
                                                <div class="gpa-header">
                                                    <h6 class="gpa-title">Academic Performance</h6>
                                                </div>
                                                <div class="gpa-display-enhanced">
                                                    <div class="gpa-circle-enhanced">
                                                        <div class="gpa-ring">
                                                            <svg width="120" height="120" class="gpa-progress">
                                                                <circle cx="60" cy="60" r="50" stroke="#e9ecef" stroke-width="8" fill="none"/>
                                                                <circle cx="60" cy="60" r="50" stroke="url(#gpaGradient)" stroke-width="8" fill="none"
                                                                        stroke-dasharray="@(((double)Model.StudentInfo.GPA.Value / 4.0) * 314) 314" 
                                                                        stroke-dashoffset="0" 
                                                                        stroke-linecap="round"
                                                                        style="transform: rotate(-90deg); transform-origin: 60px 60px;"/>
                                                                <defs>
                                                                    <linearGradient id="gpaGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                                                                        <stop offset="0%" style="stop-color:#6fb3d3;stop-opacity:1" />
                                                                        <stop offset="100%" style="stop-color:#5dade2;stop-opacity:1" />
                                                                    </linearGradient>
                                                                </defs>
                                                            </svg>
                                                        </div>
                                                        <div class="gpa-content">
                                                            <span class="gpa-value-enhanced">@Model.StudentInfo.GPA.Value.ToString("F2")</span>
                                                            <span class="gpa-label-enhanced">CGPA</span>
                                                            <div class="gpa-scale">out of 4.0</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Professional Action Cards and Analytics -->
            <div class="row">
                <!-- Quick Actions Section -->
                <div class="col-12 mb-4">
                    <div class="quick-actions-card">
                        <div class="quick-actions-header">
                            <div class="header-left">
                                <div class="header-icon-wrapper">
                                    <i class="bi bi-lightning"></i>
                                </div>
                                <div class="header-text">
                                    <h3 class="header-title">Quick Actions</h3>
                                    <p class="header-subtitle">Streamline your FYP1 workflow</p>
                                </div>
                            </div>
                            <div class="header-right">
                                <div class="status-indicator">
                                    <span class="status-dot"></span>
                                    <span class="status-text">Active</span>
                                </div>
                            </div>
                        </div>
                        <div class="quick-actions-body">
                            <div class="actions-grid">
                                <div class="action-item">
                                    <a asp-page="./Profile" class="action-card-pro">
                                        <div class="action-icon-pro primary">
                                            <i class="bi bi-person-gear"></i>
                                        </div>
                                        <div class="action-content-pro">
                                            <h6 class="action-title">Update Profile</h6>
                                            <p class="action-description">Manage your personal information</p>
                                        </div>
                                        <div class="action-arrow-pro">
                                            <i class="bi bi-arrow-right"></i>
                                        </div>
                                    </a>
                                </div>
                                
                                @if (Model.StudentInfo.Supervisor == null)
                                {
                                    <div class="action-item">
                                        <a asp-page="./SelectSupervisor" class="action-card-pro urgent">
                                            <div class="action-icon-pro warning">
                                                <i class="bi bi-person-plus"></i>
                                            </div>
                                            <div class="action-content-pro">
                                                <h6 class="action-title">Select Supervisor</h6>
                                                <p class="action-description">Choose your project supervisor</p>
                                            </div>
                                            <div class="action-arrow-pro">
                                                <i class="bi bi-arrow-right"></i>
                                            </div>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="action-item">
                                        <a asp-page="./Agreement" class="action-card-pro">
                                            <div class="action-icon-pro success">
                                                <i class="bi bi-file-check"></i>
                                            </div>
                                            <div class="action-content-pro">
                                                <h6 class="action-title">View Agreement</h6>
                                                <p class="action-description">Supervisor-student agreement</p>
                                            </div>
                                            <div class="action-arrow-pro">
                                                <i class="bi bi-arrow-right"></i>
                                            </div>
                                        </a>
                                    </div>
                                }
                                
                                <div class="action-item">
                                    <a asp-page="./Proposals/Index" class="action-card-pro">
                                        <div class="action-icon-pro info">
                                            <i class="bi bi-folder"></i>
                                        </div>
                                        <div class="action-content-pro">
                                            <h6 class="action-title">All Proposals</h6>
                                            <p class="action-description">View submission history</p>
                                        </div>
                                        <div class="action-arrow-pro">
                                            <i class="bi bi-arrow-right"></i>
                                        </div>
                                    </a>
                                </div>
                                
                                @if (Model.LatestProposal == null || Model.LatestProposal.Status == FYP1System.Models.ProposalStatus.Rejected)
                                {
                                    <div class="action-item">
                                        <a asp-page="./Proposals/Create" class="action-card-pro highlight">
                                            <div class="action-icon-pro success">
                                                <i class="bi bi-plus-circle"></i>
                                            </div>
                                            <div class="action-content-pro">
                                                <h6 class="action-title">New Proposal</h6>
                                                <p class="action-description">Submit a new project proposal</p>
                                            </div>
                                            <div class="action-arrow-pro">
                                                <i class="bi bi-arrow-right"></i>
                                            </div>
                                        </a>
                                    </div>
                                }
                                else if (Model.LatestProposal.Status == FYP1System.Models.ProposalStatus.NeedsRevision)
                                {
                                    <div class="action-item">
                                        <a asp-page="./Proposals/Edit" asp-route-id="@Model.LatestProposal.Id" class="action-card-pro urgent">
                                            <div class="action-icon-pro warning">
                                                <i class="bi bi-pencil-square"></i>
                                            </div>
                                            <div class="action-content-pro">
                                                <h6 class="action-title">Revise Proposal</h6>
                                                <p class="action-description">Update based on feedback</p>
                                            </div>
                                            <div class="action-arrow-pro">
                                                <i class="bi bi-arrow-right"></i>
                                            </div>
                                        </a>
                                    </div>
                                }
                                
                                <div class="action-item">
                                    <a asp-page="./Comments" class="action-card-pro">
                                        <div class="action-icon-pro secondary">
                                            <i class="bi bi-chat-dots"></i>
                                        </div>
                                        <div class="action-content-pro">
                                            <h6 class="action-title">View Feedback</h6>
                                            <p class="action-description">Check comments and reviews</p>
                                        </div>
                                        <div class="action-arrow-pro">
                                            <i class="bi bi-arrow-right"></i>
                                        </div>
                                    </a>
                                </div>
                                
                                <div class="action-item">
                                    <div class="action-card-pro disabled">
                                        <div class="action-icon-pro light">
                                            <i class="bi bi-calendar-event"></i>
                                        </div>
                                        <div class="action-content-pro">
                                            <h6 class="action-title">Schedule Meeting</h6>
                                            <p class="action-description">Coming soon</p>
                                        </div>
                                        <div class="action-arrow-pro">
                                            <i class="bi bi-lock"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Setup Required Message -->
            <div class="row">
                <div class="col-12">
                    <div class="info-card info-warning fade-in-up text-center">
                        <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
                        <h4 class="text-warning">Setup Required</h4>
                        <p class="text-muted">Your student profile is not complete. Please contact the administrator to set up your student record.</p>
                        <hr class="my-4">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Once your profile is set up, you'll be able to access all student features.
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
/* Enhanced Professional Student Profile Card Design */

/* Main Profile Card */
.student-profile-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 40px rgba(111, 179, 211, 0.12);
    border: 1px solid #e8f4fd;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
}

.student-profile-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(111, 179, 211, 0.18);
}

/* Enhanced Profile Card Header */
.profile-card-header {
    background: linear-gradient(135deg, #6fb3d3 0%, #5dade2 50%, #4a9ede 100%);
    color: white;
    padding: 24px 30px;
    position: relative;
    overflow: hidden;
}

.profile-card-header::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
    animation: headerShimmer 6s infinite;
}

.profile-header-content {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 2;
}

.profile-header-icon {
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 20px;
    font-size: 1.8rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.profile-header-text {
    flex: 1;
}

.profile-card-title {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.5px;
}

.profile-card-subtitle {
    margin: 4px 0 0 0;
    opacity: 0.9;
    font-size: 0.95rem;
    font-weight: 400;
}

/* Header Decoration */
.profile-header-decoration {
    position: absolute;
    top: 20px;
    right: 20px;
    z-index: 1;
}

.decoration-circle {
    width: 8px;
    height: 8px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    position: absolute;
    animation: float 3s ease-in-out infinite;
}

.circle-1 { animation-delay: 0s; }
.circle-2 { left: 15px; animation-delay: 1s; }
.circle-3 { left: 30px; animation-delay: 2s; }

@@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
}

/* Profile Card Body */
.profile-card-body {
    padding: 30px;
}

/* Profile Sections */
.profile-section {
    margin-bottom: 24px;
}

.section-header {
    margin-bottom: 20px;
    padding-bottom: 12px;
    border-bottom: 2px solid #f0f9ff;
}

.section-title {
    color: #334155;
    font-weight: 600;
    font-size: 1rem;
    margin: 0;
    display: flex;
    align-items: center;
}

.section-title i {
    color: #6fb3d3;
    font-size: 1.1rem;
}

/* Enhanced Profile Info Grid */
.profile-info-grid {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.info-item {
    display: flex;
    align-items: center;
    padding: 16px;
    background: #f8fbff;
    border-radius: 12px;
    border-left: 4px solid #6fb3d3;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.info-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(111, 179, 211, 0.02), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.info-item:hover {
    transform: translateX(4px);
    background: #f0f9ff;
    box-shadow: 0 4px 15px rgba(111, 179, 211, 0.1);
}

.info-item:hover::before {
    opacity: 1;
}

.info-icon {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, #6fb3d3, #5dade2);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.1rem;
    margin-right: 16px;
    box-shadow: 0 4px 12px rgba(111, 179, 211, 0.3);
}

.info-content {
    flex: 1;
}

.info-label {
    font-size: 0.75rem;
    color: #64748b;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    margin-bottom: 4px;
    display: block;
}

.info-value {
    color: #1e293b;
    font-weight: 500;
    font-size: 0.95rem;
}

/* Enhanced Supervisor Profile Card */
.supervisor-profile-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8fbff 100%);
    border: 2px solid #e8f4fd;
    border-radius: 16px;
    padding: 24px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.supervisor-profile-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #6fb3d3, #5dade2);
}

.supervisor-profile-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 30px rgba(111, 179, 211, 0.15);
    border-color: #6fb3d3;
}

.supervisor-avatar {
    text-align: center;
    margin-bottom: 16px;
}

.avatar-circle {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #6fb3d3, #5dade2);
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2.2rem;
    box-shadow: 0 8px 25px rgba(111, 179, 211, 0.3);
    position: relative;
    overflow: hidden;
}

.avatar-circle::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.2), transparent);
    animation: avatarShimmer 4s infinite;
}

@@keyframes avatarShimmer {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.supervisor-name {
    color: #1e293b;
    font-weight: 700;
    font-size: 1.1rem;
    margin-bottom: 16px;
    text-align: center;
