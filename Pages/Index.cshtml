@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="fade-in-up">
    <!-- Hero Section -->
    <div class="hero-section text-center mb-5">
        <div class="hero-content">
            <div class="hero-icon mb-3">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <h1 class="hero-title">FYP1 Management System</h1>
            <p class="hero-subtitle">Professional Final Year Project Management Platform</p>
            
            @if (User.Identity?.IsAuthenticated != true)
            {
                <div class="hero-actions mt-4">
                    <a href="/Identity/Account/Login" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Get Started
                    </a>
                    <a href="/Identity/Account/Register" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i>
                        Register Now
                    </a>
                </div>
            }
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Welcome Back Section -->
        <div class="welcome-section mb-5">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="welcome-title">
                        <i class="fas fa-hand-wave me-2 text-warning"></i>
                        Welcome back, @User.Identity?.Name!
                    </h2>
                    <p class="welcome-text">Ready to manage your final year projects? Choose your workspace below.</p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="current-time">
                        <i class="fas fa-calendar-day me-2"></i>
                        <span id="current-datetime"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Role-based Dashboard Cards -->
        <div class="dashboard-grid">
            @if (User.IsInRole("Admin"))
            {
                <div class="dashboard-card floating-card">
                    <div class="card h-100">
                        <div class="card-header">
                            <div class="d-flex align-items-center">
                                <div class="card-icon admin-icon me-3">
                                    <i class="fas fa-user-shield"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-0">Admin Dashboard</h5>
                                    <small class="text-muted">System Administration</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Manage programs, lecturers, committee members, and system-wide settings.</p>
                            <ul class="feature-list">
                                <li><i class="fas fa-check-circle me-2"></i>User Management</li>
                                <li><i class="fas fa-check-circle me-2"></i>Program Configuration</li>
                                <li><i class="fas fa-check-circle me-2"></i>System Settings</li>
                            </ul>
                        </div>
                        <div class="card-footer">
                            <a href="/Admin" class="btn btn-primary w-100">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Access Admin Panel
                            </a>
                        </div>
                    </div>
                </div>
            }
            
            @if (User.IsInRole("Committee"))
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Committee Dashboard</h5>
                            <p class="card-text">Manage students, proposals, and assign evaluators.</p>
                            <a href="/Committee" class="btn btn-success">Go to Committee Panel</a>
                        </div>
                    </div>
                </div>
            }
            
            @if (User.IsInRole("Student"))
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Student Dashboard</h5>
                            <p class="card-text">Submit proposals, view feedback, and track progress.</p>
                            <a href="/Student" class="btn btn-info">Go to Student Panel</a>
                        </div>
                    </div>
                </div>
            }
            
            @if (User.IsInRole("Supervisor"))
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Supervisor Dashboard</h5>
                            <p class="card-text">Monitor student progress and provide guidance.</p>
                            <a href="/Supervisor" class="btn btn-warning">Go to Supervisor Panel</a>
                        </div>
                    </div>
                </div>
            }
            
            @if (User.IsInRole("Evaluator"))
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Evaluator Dashboard</h5>
                            <p class="card-text">Evaluate proposals and provide feedback.</p>
                            <a href="/Evaluator" class="btn btn-secondary">Go to Evaluator Panel</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="mt-4">
            <h4>Please sign in to access the system</h4>
            <p>Use the login link in the navigation bar above.</p>
            
            <div class="alert alert-info mt-4">
                <h5>Demo Credentials:</h5>
                <ul class="list-unstyled">
                    <li><strong>Admin:</strong> admin@fyp1.edu.my / Admin@123</li>
                    <li><strong>Committee:</strong> committee@fyp1.edu.my / Committee@123</li>
                    <li><strong>Student:</strong> student@fyp1.edu.my / Student@123</li>
                </ul>
            </div>
        </div>
    }
</div>
