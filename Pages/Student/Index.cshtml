@page
@model FYP1System.Pages.Student.IndexModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<style>
/* Student Dashboard Styling - Light Blue Theme */
.student-dashboard {
    padding: 2rem 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    min-height: calc(100vh - 200px);
}

/* Dashboard Header */
.dashboard-header {
    background: linear-gradient(135deg, #6fb3d3 0%, #5dade2 100%);
    color: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(111, 179, 211, 0.3);
    position: relative;
    overflow: hidden;
}

.dashboard-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 100%;
    height: 200%;
    background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 100%);
    transform: rotate(45deg);
}

.dashboard-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    position: relative;
    z-index: 2;
}

.dashboard-subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    margin: 0;
    position: relative;
    z-index: 2;
}

.dashboard-meta {
    position: relative;
    z-index: 2;
}

.dashboard-meta .badge {
    font-size: 0.9rem;
    border-radius: 20px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
}

/* Info Cards */
.info-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    border: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    height: 100%;
}

.info-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
}

.info-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.15);
}

/* Color variants - Light Blue Theme */
.info-primary {
    --primary-color: #6fb3d3;
    --secondary-color: #5dade2;
}

.info-success {
    --primary-color: #7cc8e0;
    --secondary-color: #6fb3d3;
}

.info-warning {
    --primary-color: #a2d2ff;
    --secondary-color: #87ceeb;
}

/* Management Cards */
.management-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.management-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.card-header-custom {
    padding: 1.5rem;
    color: white;
    border: none;
}

.header-content {
    display: flex;
    align-items: center;
}

.header-icon {
    width: 50px;
    height: 50px;
    border-radius: 10px;
    background: rgba(255,255,255,0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin-right: 1rem;
}

.header-text h5 {
    margin: 0;
    font-weight: 600;
    font-size: 1.2rem;
}

.header-text span {
    font-size: 0.9rem;
    opacity: 0.9;
}

.card-body-custom {
    padding: 1.5rem;
    flex-grow: 1;
}

.btn-action {
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
}

.btn-action:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

/* Animation */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-in-up {
    animation: fadeInUp 0.6s ease-out;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .dashboard-title {
        font-size: 2rem;
    }
}
</style>

<div class="student-dashboard">
    <div class="container">
        <!-- Dashboard Header -->
        <div class="dashboard-header mb-4 fade-in-up">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="dashboard-title">
                        <i class="fas fa-user-graduate me-3"></i>Student Dashboard
                    </h1>
                    <p class="dashboard-subtitle">Your FYP1 journey management center</p>
                </div>
                <div class="col-md-4 text-md-end dashboard-meta">
                    <span class="badge bg-light text-dark">
                        <i class="fas fa-user-circle me-2"></i>@User.Identity?.Name
                    </span>
                    <br>
                    <small class="text-light opacity-75">
                        <i class="fas fa-calendar me-1"></i>@DateTime.Now.ToString("MMMM dd, yyyy")
                    </small>
                </div>
            </div>
        </div>

        @if (Model.StudentInfo != null)
        {
            <!-- Student Information -->
            <div class="row mb-4">
                <div class="col-lg-8 mb-4">
                    <div class="info-card info-primary fade-in-up">
                        <h4 class="mb-4">
                            <i class="fas fa-id-card me-2 text-info"></i>Student Information
                        </h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-item mb-3">
                                    <label class="text-muted small">Student ID</label>
                                    <p class="fw-bold mb-0">@Model.StudentInfo.StudentId</p>
                                </div>
                                <div class="info-item mb-3">
                                    <label class="text-muted small">Program</label>
                                    <p class="fw-bold mb-0">
                                        <i class="fas fa-graduation-cap me-2 text-primary"></i>
                                        @Model.StudentInfo.Program?.Name
                                    </p>
                                </div>
                                <div class="info-item mb-3">
                                    <label class="text-muted small">Session</label>
                                    <p class="fw-bold mb-0">@Model.StudentInfo.Session</p>
                                </div>
                                <div class="info-item mb-3">
                                    <label class="text-muted small">Semester</label>
                                    <p class="fw-bold mb-0">@Model.StudentInfo.Semester</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                @if (Model.StudentInfo.Supervisor != null)
                                {
                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Supervisor</label>
                                        <p class="fw-bold mb-0">
                                            <i class="fas fa-user-tie me-2 text-success"></i>
                                            @Model.StudentInfo.Supervisor.User.FullName
                                        </p>
                                    </div>
                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Domain</label>
                                        <p class="fw-bold mb-0">@Model.StudentInfo.Supervisor.Domain</p>
                                    </div>
                                    <div class="info-item mb-3">
                                        <label class="text-muted small">Office</label>
                                        <p class="fw-bold mb-0">
                                            <i class="fas fa-map-marker-alt me-2 text-info"></i>
                                            @Model.StudentInfo.Supervisor.OfficeLocation
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning border-0">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        <strong>Supervisor:</strong> Not assigned yet
                                    </div>
                                }
                                
                                @if (Model.StudentInfo.GPA.HasValue)
                                {
                                    <div class="info-item mb-3">
                                        <label class="text-muted small">GPA</label>
                                        <p class="fw-bold mb-0">
                                            <span class="badge bg-success fs-6">@Model.StudentInfo.GPA.Value.ToString("F2")</span>
                                        </p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.LatestProposal != null)
                {
                    <div class="card mt-3">
                        <div class="card-header">
                            <h4 class="card-title">Latest Proposal</h4>
                        </div>
                        <div class="card-body">
                            <h5>@Model.LatestProposal.Title</h5>
                            <p><strong>Type:</strong> @Model.LatestProposal.Type</p>
                            <p><strong>Status:</strong> 
                                <span class="badge 
                                    @(Model.LatestProposal.Status == FYP1System.Models.ProposalStatus.Approved ? "bg-success" :
                                      Model.LatestProposal.Status == FYP1System.Models.ProposalStatus.Rejected ? "bg-danger" :
                                      Model.LatestProposal.Status == FYP1System.Models.ProposalStatus.UnderReview ? "bg-warning" :
                                      "bg-secondary")">
                                    @Model.LatestProposal.Status
                                </span>
                            </p>
                            <p><strong>Submitted:</strong> @Model.LatestProposal.SubmittedAt?.ToString("MMM dd, yyyy")</p>
                            
                            @if (!string.IsNullOrEmpty(Model.LatestProposal.Description))
                            {
                                <p><strong>Description:</strong></p>
                                <p class="text-muted">@Model.LatestProposal.Description</p>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Quick Actions & Summary -->
            <div class="row">
                <div class="col-lg-8">
                    <!-- Quick Actions Card -->
                    <div class="management-card fade-in-up mb-4">
                        <div class="card-header-custom" style="background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);">
                            <div class="header-content">
                                <div class="header-icon">
                                    <i class="fas fa-bolt"></i>
                                </div>
                                <div class="header-text">
                                    <h5>Quick Actions</h5>
                                    <span>Student tools</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body-custom">
                            <div class="d-grid gap-3">
                                <a asp-page="./Profile" class="btn btn-outline-secondary btn-action">
                                    <i class="fas fa-user-edit me-2"></i>Edit Profile
                                </a>
                                
                                @if (Model.StudentInfo.Supervisor == null)
                                {
                                    <a asp-page="./SelectSupervisor" class="btn btn-outline-primary btn-action">
                                        <i class="fas fa-user-plus me-2"></i>Select Supervisor
                                    </a>
                                }
                                else
                                {
                                    <a asp-page="./Agreement" class="btn btn-outline-success btn-action">
                                        <i class="fas fa-handshake me-2"></i>View Agreement
                                    </a>
                                }
                                
                                <a asp-page="./Proposals/Index" class="btn btn-outline-info btn-action">
                                    <i class="fas fa-file-alt me-2"></i>View All Proposals
                                </a>
                                
                                @if (Model.LatestProposal == null || Model.LatestProposal.Status == FYP1System.Models.ProposalStatus.Rejected)
                                {
                                    <a asp-page="./Proposals/Create" class="btn btn-outline-success btn-action">
                                        <i class="fas fa-plus me-2"></i>Submit New Proposal
                                    </a>
                                }
                                else if (Model.LatestProposal.Status == FYP1System.Models.ProposalStatus.NeedsRevision)
                                {
                                    <a asp-page="./Proposals/Edit" asp-route-id="@Model.LatestProposal.Id" class="btn btn-outline-warning btn-action">
                                        <i class="fas fa-edit me-2"></i>Revise Proposal
                                    </a>
                                }
                                
                                <a asp-page="./Comments" class="btn btn-outline-secondary btn-action">
                                    <i class="fas fa-comments me-2"></i>View Feedback
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Proposal Summary Card -->
                    <div class="management-card fade-in-up">
                        <div class="card-header-custom" style="background: linear-gradient(135deg, #6f42c1 0%, #5a36a1 100%);">
                            <div class="header-content">
                                <div class="header-icon">
                                    <i class="fas fa-chart-pie"></i>
                                </div>
                                <div class="header-text">
                                    <h5>Proposal Summary</h5>
                                    <span>Your submission overview</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body-custom">
                            @{
                                var approvedCount = Model.Proposals.Count(p => p.Status == FYP1System.Models.ProposalStatus.Approved);
                                var rejectedCount = Model.Proposals.Count(p => p.Status == FYP1System.Models.ProposalStatus.Rejected);
                                var pendingCount = Model.Proposals.Count(p => p.Status == FYP1System.Models.ProposalStatus.UnderReview || p.Status == FYP1System.Models.ProposalStatus.Submitted);
                            }
                            
                            <div class="row text-center">
                                <div class="col-12 mb-3">
                                    <div class="summary-item">
                                        <h3 class="text-primary">@Model.Proposals.Count</h3>
                                        <p class="text-muted mb-0">Total Proposals</p>
                                    </div>
                                </div>
                            </div>
                            
                            <hr class="my-3">
                            
                            <div class="summary-details">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span><i class="fas fa-check-circle text-success me-2"></i>Approved:</span>
                                    <span class="badge bg-success">@approvedCount</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span><i class="fas fa-times-circle text-danger me-2"></i>Rejected:</span>
                                    <span class="badge bg-danger">@rejectedCount</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-clock text-warning me-2"></i>Under Review:</span>
                                    <span class="badge bg-warning">@pendingCount</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Setup Required Message -->
            <div class="row">
                <div class="col-12">
                    <div class="info-card info-warning fade-in-up text-center">
                        <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
                        <h4 class="text-warning">Setup Required</h4>
                        <p class="text-muted">Your student profile is not complete. Please contact the administrator to set up your student record.</p>
                        <hr class="my-4">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Once your profile is set up, you'll be able to access all student features.
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
.info-item label {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.5px;
}

.summary-item h3 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.summary-details {
    font-size: 0.9rem;
}

.btn-action {
    border-radius: 10px !important;
}
</style>
