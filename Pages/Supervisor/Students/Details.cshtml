@page
@model FYP1System.Pages.Supervisor.Students.DetailsModel
@{
    ViewData["Title"] = "Student Details";
}

<style>
/* Student Details Styling - Professional Design */
.student-details {
    padding: 2rem 0;
    background: linear-gradient(135deg, #e0f2fe 0%, #b3e5fc 100%);
    min-height: calc(100vh - 200px);
}

/* Dashboard Header */
.dashboard-header {
    background: linear-gradient(135deg, #6fb3d3 0%, #5dade2 100%);
    color: white;
    padding: 3rem 2rem;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(30, 41, 59, 0.3);
    position: relative;
    overflow: hidden;
    margin-bottom: 3rem;
}

.dashboard-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 120%;
    height: 200%;
    background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 50%);
    transform: rotate(25deg);
}

.dashboard-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6, #06b6d4, #10b981);
}

.dashboard-title {
    font-size: 2.8rem;
    font-weight: 800;
    margin: 0;
    position: relative;
    z-index: 2;
    letter-spacing: -0.025em;
}

.dashboard-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
    margin: 0.5rem 0 0 0;
    position: relative;
    z-index: 2;
    font-weight: 400;
}

/* Content Cards */
.content-card {
    background: linear-gradient(135deg, #f8fdff 0%, #e8f8ff 100%);
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    border: 1px solid rgba(129, 212, 250, 0.3);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    margin-bottom: 2rem;
}

.content-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #03a9f4, #00bcd4, #4fc3f7);
}

.content-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 60px rgba(0,0,0,0.12);
    border-color: rgba(33, 150, 243, 0.5);
}

/* Profile Section */
.profile-section {
    text-align: center;
    padding: 2rem 0;
}

.profile-avatar {
    width: 140px;
    height: 140px;
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4rem;
    color: white;
    margin: 0 auto 1.5rem;
    position: relative;
    box-shadow: 0 15px 35px rgba(59, 130, 246, 0.3);
}

.profile-avatar::before {
    content: '';
    position: absolute;
    inset: -4px;
    background: linear-gradient(45deg, #3b82f6, #06b6d4, #10b981, #f59e0b);
    border-radius: 50%;
    z-index: -1;
    animation: rotate 4s linear infinite;
}

@@keyframes rotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.profile-info {
    text-align: center;
}

.profile-name {
    font-size: 2rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.5rem;
    letter-spacing: -0.025em;
}

.profile-id {
    color: #64748b;
    font-size: 1.1rem;
    margin-bottom: 1rem;
    font-weight: 500;
}

.status-badge {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
    border: none;
    font-size: 0.9rem;
}

/* Info Items */
.info-item {
    display: flex;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid #f1f5f9;
    transition: all 0.3s ease;
}

.info-item:last-child {
    border-bottom: none;
}

.info-item:hover {
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    transform: translateX(8px);
}

.info-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #ddd6fe 0%, #c4b5fd 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #7c3aed;
    margin-right: 1.5rem;
    font-size: 1.2rem;
    box-shadow: 0 4px 15px rgba(124, 58, 237, 0.2);
}

.info-content {
    flex-grow: 1;
}

.info-label {
    font-size: 0.85rem;
    color: #64748b;
    margin-bottom: 0.25rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.info-value {
    font-weight: 600;
    color: #1e293b;
    font-size: 1.1rem;
}

/* Button Styling */
.btn-light-blue {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    border: none;
    color: white;
    border-radius: 12px;
    padding: 1rem 1.5rem;
    font-weight: 600;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
    font-size: 0.95rem;
}

.btn-light-blue:hover {
    background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%);
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(59, 130, 246, 0.4);
}

.btn-outline-light-blue {
    border: 2px solid #3b82f6;
    color: #3b82f6;
    background: transparent;
    border-radius: 12px;
    padding: 1rem 1.5rem;
    font-weight: 600;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    font-size: 0.95rem;
}

.btn-outline-light-blue:hover {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    border-color: transparent;
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(59, 130, 246, 0.3);
}

.btn-back {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    border-radius: 12px;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.btn-back:hover {
    background: rgba(255, 255, 255, 0.3);
    color: white;
    transform: translateY(-2px);
}

/* Card Headers */
.card-header-custom {
    background: linear-gradient(135deg, #e1f5fe 0%, #b3e5fc 100%);
    border: none;
    padding: 1.5rem;
    border-radius: 20px 20px 0 0;
}

.card-header-custom h5 {
    color: #1e293b;
    font-weight: 700;
    margin: 0;
    font-size: 1.2rem;
}

/* Table Styling */
.table-responsive {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.05);
}

.table thead th {
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    color: white;
    border: none;
    font-weight: 700;
    padding: 1.5rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.table tbody tr {
    transition: all 0.3s ease;
    border: none;
}

.table tbody tr:hover {
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    transform: scale(1.01);
}

.table tbody td {
    padding: 1.5rem;
    border-color: #f1f5f9;
    vertical-align: middle;
}

/* Badge Styling */
.badge-approved { 
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
}
.badge-pending { 
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
}
.badge-rejected { 
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
}
.badge-under-review { 
    background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 4rem 2rem;
}

.empty-state i {
    font-size: 5rem;
    color: #cbd5e1;
    margin-bottom: 2rem;
    opacity: 0.7;
}

.empty-state h5 {
    color: #64748b;
    font-weight: 600;
    margin-bottom: 1rem;
}

.empty-state p {
    color: #94a3b8;
    font-size: 1.1rem;
}

/* Quick Actions */
.quick-actions-card {
    background: linear-gradient(135deg, #e1f5fe 0%, #b3e5fc 100%);
    border: 1px solid #81d4fa;
}

/* Academic Info Grid */
.academic-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
}

.academic-item {
    padding: 1.5rem;
    border-right: 1px solid #f1f5f9;
    border-bottom: 1px solid #f1f5f9;
}

.academic-item:nth-child(2n) {
    border-right: none;
}

.academic-item:nth-last-child(-n+2) {
    border-bottom: none;
}

/* Animations */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(40px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@@keyframes slideInLeft {
    from {
        opacity: 0;
        transform: translateX(-40px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@@keyframes slideInRight {
    from {
        opacity: 0;
        transform: translateX(40px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.fade-in-up {
    animation: fadeInUp 0.8s ease forwards;
}

.slide-in-left {
    animation: slideInLeft 0.8s ease forwards;
}

.slide-in-right {
    animation: slideInRight 0.8s ease forwards;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .dashboard-title {
        font-size: 2.2rem;
    }
    
    .profile-avatar {
        width: 100px;
        height: 100px;
        font-size: 2.5rem;
    }
    
    .academic-grid {
        grid-template-columns: 1fr;
    }
    
    .academic-item {
        border-right: none;
    }
}

/* Glassmorphism effects */
.glass-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}
</style>

<div class="student-details">
    <div class="container">
        <!-- Header -->
        <div class="dashboard-header fade-in-up">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="dashboard-title">
                        <i class="fas fa-user-graduate me-3"></i>Student Profile
                    </h1>
                    <p class="dashboard-subtitle">Comprehensive academic and personal information dashboard</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="/Supervisor/Students" class="btn btn-back">
                        <i class="fas fa-arrow-left me-2"></i>Back to Students
                    </a>
                </div>
            </div>
        </div>

        <!-- Section 1: Student Profile Overview -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="content-card slide-in-left">
                    <div class="card-header-custom">
                        <h5>
                            <i class="fas fa-user-graduate me-2"></i>Student Profile Overview
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-3 text-center">
                                <div class="profile-avatar mx-auto" style="width: 120px; height: 120px; font-size: 3rem;">
                                    <i class="fas fa-user-graduate"></i>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h3 class="profile-name mb-2">@Model.Student.User?.FullName</h3>
                                <p class="profile-id mb-3">Student ID: @Model.Student.StudentId</p>
                                <span class="status-badge">
                                    <i class="fas fa-check-circle me-2"></i>Active Student
                                </span>
                            </div>
                            <div class="col-md-3 text-center">
                                <div class="d-grid gap-2">
                                    <span class="badge bg-primary p-2">
                                        <i class="fas fa-graduation-cap me-1"></i>@Model.Student.Program?.Name
                                    </span>
                                    <span class="badge bg-info p-2">
                                        <i class="fas fa-calendar me-1"></i>@Model.Student.Session
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 2: Main Information Grid -->
        <div class="row mb-4">
            <!-- Left Column: Contact & Personal Info -->
            <div class="col-lg-6 mb-4">
                <div class="content-card slide-in-left">
                    <div class="card-header-custom">
                        <h5>
                            <i class="fas fa-address-card me-2"></i>Contact & Personal Information
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-id-card"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Full Name</div>
                                <div class="info-value">@Model.Student.User?.FullName</div>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Email Address</div>
                                <div class="info-value">@Model.Student.User?.Email</div>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-user-tie"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Assigned Supervisor</div>
                                <div class="info-value">@Model.Student.Supervisor?.User?.FullName</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Academic Details -->
            <div class="col-lg-6 mb-4">
                <div class="content-card slide-in-right">
                    <div class="card-header-custom">
                        <h5>
                            <i class="fas fa-book me-2"></i>Academic Details
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-graduation-cap"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Program</div>
                                <div class="info-value">@Model.Student.Program?.Name</div>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-calendar"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Academic Session</div>
                                <div class="info-value">@Model.Student.Session</div>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Current Semester</div>
                                <div class="info-value">@Model.Student.Semester</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 3: Performance & Timeline -->
        <div class="row mb-4">
            <!-- Academic Performance -->
            <div class="col-lg-6 mb-4">
                <div class="content-card slide-in-left" style="animation-delay: 0.1s;">
                    <div class="card-header-custom">
                        <h5>
                            <i class="fas fa-chart-line me-2"></i>Academic Performance
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="row">
                            <div class="col-6">
                                <div class="performance-metric">
                                    <div class="metric-value" style="font-size: 3rem; font-weight: 800; color: #3b82f6;">
                                        @(Model.Student.GPA?.ToString("F2") ?? "N/A")
                                    </div>
                                    <div class="metric-label" style="color: #64748b; font-weight: 600;">
                                        Current GPA
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="performance-metric">
                                    <div class="metric-value" style="font-size: 2rem; font-weight: 700; color: #10b981;">
                                        <i class="fas fa-trophy"></i>
                                    </div>
                                    <div class="metric-label" style="color: #64748b; font-weight: 600;">
                                        Academic Standing
                                    </div>
                                    <div style="color: #10b981; font-weight: 600;">Good Standing</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Important Dates -->
            <div class="col-lg-6 mb-4">
                <div class="content-card slide-in-right" style="animation-delay: 0.1s;">
                    <div class="card-header-custom">
                        <h5>
                            <i class="fas fa-clock me-2"></i>Important Dates & Timeline
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-calendar-plus"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Enrollment Date</div>
                                <div class="info-value">@Model.Student.CreatedAt.ToString("MMMM dd, yyyy")</div>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Academic Status</div>
                                <div class="info-value">@(Model.Student.IsActive ? "Active" : "Inactive")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 4: Quick Actions -->
        <div class="row">
            <div class="col-12">
                <div class="content-card quick-actions-card slide-in-left" style="animation-delay: 0.2s;">
                    <div class="card-header-custom">
                        <h5>
                            <i class="fas fa-bolt me-2"></i>Supervisor Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <a href="/Supervisor/Proposals?studentId=@Model.Student.Id" class="btn btn-light-blue w-100">
                                    <i class="fas fa-file-alt me-2"></i>View Proposals
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a href="mailto:@Model.Student.User?.Email" class="btn btn-outline-light-blue w-100">
                                    <i class="fas fa-envelope me-2"></i>Send Email
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a href="/Supervisor/Comments?studentId=@Model.Student.Id" class="btn btn-outline-light-blue w-100">
                                    <i class="fas fa-comments me-2"></i>View Comments
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
